<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-grid-row">
        <% if params["referer"] == 'opt-out' %>
          <h1 class="govuk-heading-xl"><%= t("login.opt_out.title") %></h1>

          <p class="govuk-body">
            <%= t("login.opt_out.paragraph_1") %>
          </p>
        <% else %>
          <h1 class="govuk-heading-xl"><%= t("login.title") %></h1>
        <% end %>

          <p class="govuk-body">
            <%= t("login.paragraph_1") %>
          </p>

          <p class="govuk-body">
            <%= t("login.paragraph_2") %>
          </p>
          <a
          href="<%= locals[:authorize_url] %>"
          role="button"
          draggable="false"
          class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"
          data-module="govuk-button">
          Start now
          <svg
            class="govuk-button__start-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="17.5"
            height="19"
            viewBox="0 0 33 40"
            role="presentation"
            focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>