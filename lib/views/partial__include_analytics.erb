<% if cookie_consent? && google_property %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= google_property %>" nonce="<%= script_nonce %>"></script>
  <script nonce="<%= script_nonce %>">
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '<%= google_property %>');
  </script>
<% end %>
