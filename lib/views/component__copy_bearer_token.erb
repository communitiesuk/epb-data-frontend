<script type = "module" src="<%= assets_path('/javascript/copy-bearer-token.js') %>" nonce="<%= script_nonce %>"></script>
<div>
  <p id="copy-to-clipboard-margin" class="govuk-body">
    <button id="copyToClipboardButton" class="govuk-body" data-clicked-image-src="<%= data_uri_svg('/images/check.svg') %>">
    <span class="share-icon">
      <%= inline_svg('/images/copy-link.svg') %>
    </span>
      <%= t("my_account.copy_bearer_token")%>
    </button>
    <script type = "module" nonce="<%= script_nonce %>">
        import { clickHandler } from "<%= assets_path('/javascript/copy-bearer-token.js') %>";

        var copyButton = document.getElementById('copyToClipboardButton');
        copyButton.classList.add('display-inline');
        copyButton.addEventListener("click", clickHandler)
    </script>
  </p>
</div>
